{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "outDir": "build",
        "lib": [
			"es6",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": false,
        "jsx": "react-jsx"
	},
	"include": [
        "extension",
	],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}